<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16px"
    tools:context="com.osu.cse.projectblocks.activities.food.menu.FoodMenuActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food_search_query"
        android:hint="@string/food_menu_search_query_hint"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foods_menu_by_category"
        android:layout_weight="1"
        android:layout_below="@+id/food_search_query"
        android:layout_alignParentStart="true" />

</RelativeLayout>
